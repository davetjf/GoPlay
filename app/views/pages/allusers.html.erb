<div id="messagePage" class="w3-container white">
	<div style="padding: 50px 10px">
    <h1 style="font-family: 'Special Elite', cursive !important;">List of Users</h1>
<% @users.each do |user| %>



    
    <table id="usertable" style="width: 100%; padding: 5px;" class="w3-responsive w3-border">

   <tr><td><%= image_tag avatar_url(user), size: 48, class: 'circle' %></td></tr> 
   <tr><td>User Id: <%= user.id %></td></tr>
   <tr><td>Email: <%= user.email %></td></tr>
   <tr><td>Username: <%= user.username %></td></tr>
   <tr><td>Admin:    <% if user.admin == true %>
  <a href="/downgrade/<%= user.id %>"><button class="adminButton">Remove Admin</button></a>
   <% else %>
   <a href="/upgrade/<%= user.id %>"><button class="adminButton">Make Admin</button></a>
   <% end %></td></tr>
   <tr><td>Blocked:    <% if user.blocked == true %>
   <a href="/unblock/<%= user.id %>"><button class="adminButton">Unblock</button></a>
   <% else %>
  <a href="/block/<%= user.id %>"><button class="adminButton">Block</button></a>
   <% end %>   </td></tr>




   
	
    </table>
   
<% end %>
</div>

</div>