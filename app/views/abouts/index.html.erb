<div id="aboutPage" class="white w3-container w3-center">

<p id="notice"><%= notice %></p><br>
<h1 style="font-family: 'Special Elite', cursive !important;">About</h1><br>




  
    <% @abouts.each do |about| %>
     <%= time_ago_in_words(about.created_at) %>
      
        <%= about.title %>
        <%= about.body %><br><br>

        <% if user_signed_in? && current_user.admin? %>
        <%#= link_to 'Show', about %><br>
        <%= link_to 'Edit', edit_about_path(about) %><br>
        
        <%= link_to 'Destroy', about, method: :delete, data: { confirm: 'Are you sure?' } %><br><br>
        <% end %>
    <% end %>

<br>
<% if user_signed_in? && current_user.admin? %>
<%= link_to 'New Content', new_about_path %>
<% end %>

</div>