<div class="w3-responsive"> <h1>Overview</h1>
<% @totalwins = 0 %>
<% @pwins = 0 %>
<% @twins = 0 %>
<% @fwins = 0 %>
<% @my_games.each do |my_game| %>
<% if current_user.email == my_game.player_one && my_game.game_name=='Pool' && my_game.result== 'Win' %>
<% @pwins = @pwins + 1 %>
<% end %>
