<% @twins = @twins + 1 %>
<% end %>
<% if current_user.email == my_game.player_one && my_game.game_name=='Fuseball' && my_game.result == 'Win'  %>
<% @fwins = @fwins + 1 %>
<% end %>
<% if current_user.email == my_game.player_one && my_game.result== 'Win' %>
<% @totalwins = @totalwins + 1 %>
<% end %>

<% @totallosses = 0 %>
<% @plosses = 0 %>
<% @tlosses = 0 %>
<% @flosses = 0 %>
<% if current_user.email == my_game.player_one && my_game.game_name=='Pool' && my_game.result== 'Lose' %>
<% @plosses = @plosses + 1 %>
<% end %>
<% if current_user.email == my_game.player_one && my_game.game_name=='Table Tennis' && my_game.result == 'Lose'  %>
<% @tlosses = @tlosses + 1 %>
<% end %>
<% if current_user.email == my_game.player_one && my_game.game_name=='Fuseball' && my_game.result == 'Lose'  %>
<% @flosses = @flosses + 1 %>
<% end %>
<% if current_user.email == my_game.player_one && my_game.result== 'Lose' %>
<% @totallosses = @totallosses + 1 %>
<% end %>

<% @totalnp = 0 %>
<% @pnp = 0 %>
<% @tnp = 0 %>
<% @fnp = 0 %>
<% if current_user.email == my_game.player_one && my_game.game_name=='Pool' && my_game.result== 'Yet to be played' %>
<% @pnp = @pnp + 1 %>
<% end %>
<% if current_user.email == my_game.player_one && my_game.game_name=='Table Tennis' && my_game.result == 'Yet to be played'  %>
