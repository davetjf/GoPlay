<% end %>
<% if current_user.email == my_game.player_one && my_game.game_name=='Fuseball' && my_game.result == 'Yet to be played'  %>
<% @fnp = @fnp + 1 %>
<% end %>
<% if current_user.email == my_game.player_one && my_game.result== 'Yet to be played' %>
<% @totalnp = @totalnp + 1 %>
<%= current_user.email %>
<%= my_game.player_one %>
<% end %>

<% end %><!--End of loop-->


