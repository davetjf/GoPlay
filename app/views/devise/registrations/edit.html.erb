<div id="messagePage" class="white w3-conatiner w3-center">
  <div style="padding: 20px">
<h2 style="font-family: 'Special Elite', cursive !important;" class="white">Edit Profile<%#= resource_name.to_s.humanize %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <!------------------------------------------------------------------------------------------------
    Editing this out - if the user changes their username after setting up the account then all the
    game previously saved will be lost! 


    <div class="messageField">
      <%#= f.label :username %><br />
      <%#= f.text_field :username, autofocus: true, placeholder: "name", autocomplete: "username" %>
    </div>
    ------------------------------------------------------------------------------------------------>
    <div class="messageField">
    <br />
    <%= f.url_field :avatar_url, placeholder: "Provide URL for Avatar, or leave blank for default" %>
    </div>


  <div class="field">
    <%#= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "email@email.com", autocomplete: "email" %>
  </div>




  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%#= f.label :password %> <br />
    <%= f.password_field :password, placeholder: "New Password (6 characters minimum) - Leave Blank if you don't want to change", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <!--<em><%= @minimum_password_length %> characters minimum</em>-->
    <% end %>
  </div>

  <div class="field">
    <%#= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, placeholder: "Confirm New Password", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%#= f.label :current_password %><br />
    <%= f.password_field :current_password, placeholder: "Enter current password to confirm changes", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>


<p class="white">Unhappy?</p>

<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "gameButton" %><br>

<%= link_to "Back", :back, class: "no-decoration white" %>
</div>
</div>
<style type="text/css">
  .gameButton{
  height: 30px;
  background-color: #bd6019;
  color: white;
  border:none;
  
  border-radius: 10%;
}
 .gameButton:hover{
  animation: bounce 1s infinite;
}
</style>