<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<br>
<% if @post.canComment == true %>
<h2 style="font-family: 'Special Elite', cursive !important"><%= @post.comments.count %> Comments</h2>
<%= render @post.comments %>
<h3 style="font-family: 'Special Elite', cursive !important">Add a comment: </h3>
<% end %>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
