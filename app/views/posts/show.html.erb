<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<br>

<% if @post.canComment == true %>
<h2 style="font-family: 'Special Elite', cursive !important"><%= @post.comments.count %> Comments</h2>
<%= render @post.comments %>
<h3 style="font-family: 'Special Elite', cursive !important">Add a comment: </h3>
<% end %>
<%= render 'comments/form' %>
<% if user_signed_in? && current_user.admin? %>
<p><a href="/on/<%= @post.id %>" class="button">On</a></p>
<p><a href="/off/<%= @post.id %>" class="button">Off</a></p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
