<%= form_with(model: double, local: true) do |form| %>
  <% if double.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(double.errors.count, "error") %> prohibited this double from being saved:</h2>

      <ul>
      <% double.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div id="singleForm" class="w3-center w3-container">
  <div class="field">
    <%= form.label :game_name, 'Game' %><br>
    <%= form.select :game_name, @game_names.collect {|u| [ u.name ] }, id: :double_game_name %>
  </div><br><br>

  <div class="field">
    <%= form.label :date %><br>
    <%= form.date_select :date, id: :double_date %>
  </div><br><br>

  <div class="field">
    <%= form.label :player_one, 'Player one' %><br>
    <%= form.select :player_one, [current_user.username], id: :double_player_one %>
  </div><br>

  <div class="field">
    <%= form.label :player_two, 'Player two' %><br>
    <%= form.select :player_two, @users.collect {|u| [ u.username ] }, id: :double_player_two  %>
  </div><br>

  <div class="field">
    <%= form.label :player_three, 'Opponent' %><br>
    <%= form.select :player_three, @users.collect {|u| [ u.username ] }, id: :double_player_three  %>
  </div><br>

  <div class="field">
    <%= form.label :player_four, 'Opponent' %><br>
    <%= form.select :player_four, @users.collect {|u| [ u.username ] }, id: :double_player_four  %>
  </div><br><br>

  <div class="field">
    <%= form.label :result %><br>
    <%= form.select :result, [ 'Win', 'Lose', 'Yet to be played'],  id: :double_result %>
  </div><br><br>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
</div>
