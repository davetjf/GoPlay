<p style="color: orange"><% @users.each do |u| %>
<% if comment.name == u.username %>
<%= image_tag avatar_url(u), size: 48, class: "circle" %>
<% end %>
<% end %><%= comment.name %></p>

<p><%= comment.body %></p>
<p style="color: orange; font-size: 10px"><i><%= time_ago_in_words(comment.created_at) %></i></p><hr>

<% if current_user.admin? %>
	

<p style="border:1px solid orange"> <%= link_to 'Delete',[comment.post,comment], method: :delete, data: {confirm: "Are you sure?"}, class: 'no-decoration' %></p>

<% end %>

<style type="text/css">
	.circle{
		border-radius: 50%;
	}
	#comment_body{
		width: 100%;
		height: 80px;
		background-color: transparent;
		color: white;
		border:1px solid orange;
	}
</style>