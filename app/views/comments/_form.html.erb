<% if @post.canComment == false %>
<p>Comments are closed</p>
<% else %>
<%= form_for([@post,@post.comments.build]) do |f| %>
<p>
    <%#= f.label :name %>
    <%#= f.text_field :name %>
</p>

<p>
    <%= f.label :body %><br>
     <%= f.text_area :body %><br>
</p>

<br>
<p>
    <%= f.submit %>
</p>
<% end %>
<% end %>